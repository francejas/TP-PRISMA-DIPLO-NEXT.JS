generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id       String  @id @default(uuid()) // UNIQUE USER IDENTIFICATION
  nombre   String
  email    String  @unique
  password String
  edad     Int
  activo   Boolean @default(true)
}

model Publicacion {
  id String @id @default(uuid())
  titulo String
  contenido String
  autorId String
}